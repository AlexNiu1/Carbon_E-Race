<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECECEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <Button
        android:id="@+id/homeButton1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="103.8dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#D3D3D3"
        android:drawableTop="@drawable/ic_baseline_home_24"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="#949494"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/homeTitle"
        app:rippleColor="#00FFFFFF"
        tools:layout_editor_absoluteX="153dp" />

    <Button
        android:id="@+id/settingsButton1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="103.8dp"
        android:layout_height="74dp"
        android:backgroundTint="#D3D3D3"
        android:drawableTop="@drawable/ic_baseline_settings_24"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="#949494"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/rankButton1"
        app:rippleColor="#00FFFFFF"
        tools:layout_editor_absoluteX="153dp" />

    <Button
        android:id="@+id/rankButton1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="103.8dp"
        android:layout_height="74dp"
        android:backgroundTint="#D3D3D3"
        android:drawableTop="@drawable/ic_baseline_leaderboard_24"
        android:text="rank"
        android:textAlignment="center"
        android:textColor="#949494"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/travelButton1"
        app:rippleColor="#00FFFFFF"
        tools:layout_editor_absoluteX="153dp" />

    <Button
        android:id="@+id/travelButton1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="103.8dp"
        android:layout_height="74dp"
        android:backgroundTint="#D3D3D3"
        android:drawableTop="@drawable/ic_baseline_directions_car_24"
        android:text="Travel"
        android:textAlignment="center"
        android:textColor="#949494"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/foodButton1"
        app:rippleColor="#00FFFFFF"
        tools:layout_editor_absoluteX="153dp" />

    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/foodButton1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="103.8dp"
        android:layout_height="74dp"
        android:backgroundTint="#D3D3D3"
        android:drawableTop="@drawable/ic_baseline_fastfood_24"
        android:text="Food"
        android:textAlignment="center"
        android:textColor="#949494"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/homeButton1"
        app:rippleColor="#00FFFFFF"
        tools:layout_editor_absoluteX="153dp" />

</androidx.constraintlayout.widget.ConstraintLayout>